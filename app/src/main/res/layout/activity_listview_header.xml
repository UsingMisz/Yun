<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/layout_header_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_default_height"
        android:scaleType="centerCrop"
        android:src="@mipmap/personal_bg"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/activity_header_touxiang"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/activity_header_touxiang"
            android:layout_centerInParent="true"
            android:id="@+id/activity_header_textview"
            style="@style/name_textview"
            />
        </RelativeLayout>




