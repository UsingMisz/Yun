<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">



  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/actionbar_music"
      android:background="@mipmap/actionbar_music_normal"
      android:layout_centerInParent="true"
      />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actionbar_discover"
        android:background="@mipmap/actionbar_discover_selected"
        android:layout_toLeftOf="@id/actionbar_music"
        android:layout_centerVertical="true"
       />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actionbar_friends"
        android:background="@mipmap/actionbar_friends_normal"
        android:layout_toRightOf="@id/actionbar_music"
        android:layout_centerVertical="true"/>

</RelativeLayout>